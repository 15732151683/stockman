/**index.wxss**/
.container {
  background: rgb(175,212,218);
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  margin: auto;
}
.userinfo{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 70%;
  justify-content: space-around;
  align-items: center;
}
.userinfo text{
  color: black;
  letter-spacing: 5rpx;
  margin-top: -90rpx;
}
.start{
  background: rgb(175,212,218);
  color: rgb(47, 84, 120);
  border: 1px solid rgb(47, 84, 120);
  font-size: 14px;
  padding: 10rpx 40rpx;
}
.userinfo-avatar {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin-top: 80rpx;
}