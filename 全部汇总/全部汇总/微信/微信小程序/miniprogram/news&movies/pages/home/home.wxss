
page{
  background-color: #b3d4db;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.get-userinfo{
  background: none;
  border:1px solid #405f80;
  font-size: 28rpx;
  color: #405f80;
}
.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 168rpx;
  margin-bottom: 100rpx;
}

.userinfo-nickname {
  font-size: 32rpx;
  font-weight: bold;
  font-family: "SimSun";

}
.btn{
  width:250rpx;
  height: 80rpx;
  border:1px solid #405f80;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 200rpx;
}
.btn-text{
  font-size: 24rpx;
  color: #405f80;
}